<dialect xmlns="http://www.thymeleaf.org/extras/dialect"
	prefix="tiles" namespace-uri="http://www.thymeleaf.org/extras/tiles" namespace-strict="false"
	class="org.thymeleaf.extras.tiles2.dialect.TilesDialect">

	<attribute-processor name="fragment">
		<documentation
			see-also="include substituteby"
			reference="Thymeleaf Tiles 2 integration module readme">
			<![CDATA[
			Marks an area as a fragment to be included as a Tiles attribute.
			]]>
		</documentation>
	</attribute-processor>

	<attribute-processor name="include">
		<documentation
			see-also="substituteby fragment"
			reference="Thymeleaf Tiles 2 integration module readme">
			<![CDATA[
			Include a Tiles attribute.
			]]>
		</documentation>
	</attribute-processor>

	<attribute-processor name="string">
		<documentation
			reference="Thymeleaf Tiles 2 integration module readme">
			<![CDATA[
			Inserts String-type Tiles attributes.
			]]>
		</documentation>
	</attribute-processor>

	<attribute-processor name="substituteby">
		<documentation
			see-also="include fragment"
			reference="Thymeleaf Tiles 2 integration module readme">
			<![CDATA[
			Include a Tiles attribute.
			]]>
		</documentation>
	</attribute-processor>

</dialect>
