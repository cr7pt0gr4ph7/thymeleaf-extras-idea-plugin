<!--suppress XmlUnboundNsPrefix -->
<idea-plugin version="2" url="https://github.com/dmarcotte/idea-handlebars">
    <id>org.thymeleaf.extras.idea</id>
    <name>Handlebars/Mustache</name>
    <description>
        <![CDATA[
      <a href="http://handlebarsjs.com/">Handlebars</a> and <a href="http://mustache.github.com/">Mustache</a> template support
      <br>
      <br>
      Issues, feature requests and contributions welcome: <a href="https://github.com/dmarcotte/idea-handlebars">https://github.com/dmarcotte/idea-handlebars</a>
    ]]>
    </description>
    <category>Custom Languages</category>
    <change-notes>
        <![CDATA[
      <b>Changenotes</b>
    ]]>
    </change-notes>
    <version>0.7</version>

    <depends>com.intellij.modules.lang</depends>
    <depends optional="true" config-file="thymeleaf-spring.xml">com.intellij.spring</depends>

    <vendor logo="/icons/handlebars_icon.png" url="https://github.com/dmarcotte">dmarcotte</vendor>

    <idea-version since-build="107.105"/>
    <!--<idea-version since-build="110.000" until-build="128.18"/>-->

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Dialect descriptor files -->
        <projectService serviceImplementation="org.thymeleaf.extras.idea.html.ThymeleafAttributeDescriptorsHolder"/>
        <standardResourceProvider implementation="org.thymeleaf.extras.idea.dialect.ThymeleafDialectSchemaProvider"/>
        <standardResourceProvider implementation="org.thymeleaf.extras.idea.dialect.ThymeleafDefaultDialectsProvider"/>

        <dom.fileDescription implementation="org.thymeleaf.extras.idea.dialect.DialectsDomFileDescription"/>

        <dom.implementation interfaceClass="org.thymeleaf.extras.idea.dialect.xml.Dialect"
                            implementationClass="org.thymeleaf.extras.idea.dialect.xml.impl.DialectImpl"/>
        <dom.implementation interfaceClass="org.thymeleaf.extras.idea.dialect.xml.DialectItem"
                            implementationClass="org.thymeleaf.extras.idea.dialect.xml.impl.DialectItemImpl"/>

        <!-- Documentation / Quick Info -->
        <lang.documentationProvider language="HTML"
                                    implementationClass="org.thymeleaf.extras.idea.html.ThymeleafXmlDocumentationProvider"
                                    order="first, before xml"/>
        <lang.documentationProvider language="XHTML"
                                    implementationClass="org.thymeleaf.extras.idea.html.ThymeleafXmlDocumentationProvider"
                                    order="first, before xml"/>
        <lang.documentationProvider language="XML"
                                    implementationClass="org.thymeleaf.extras.idea.html.ThymeleafXmlDocumentationProvider"
                                    order="first, before xml"/>
        <xml.attributeDescriptorsProvider
                implementation="org.thymeleaf.extras.idea.html.ThymeleafAttributeDescriptorsProvider"/>

        <!-- Line markers for fragment usages -->
        <codeInsight.lineMarkerProvider language="ThFS"
                                        implementationClass="org.thymeleaf.extras.idea.html.FragmentSelectorLineMarkerProvider"/>

        <!-- Fragment selection parser -->
        <lang.parserDefinition language="ThFS"
                               implementationClass="org.thymeleaf.extras.idea.lang.fragment.selection.FragmentSelectorParserDefinition"/>
        <multiHostInjector implementation="org.thymeleaf.extras.idea.html.XmlFragmentSelectorInjector"/>
        <completion.contributor language="ThFS"
                                implementationClass="org.thymeleaf.extras.idea.lang.fragment.selection.completion.FragmentSelectorCompletionContributor"/>
    </extensions>
</idea-plugin>
