<!--suppress XmlUnboundNsPrefix -->
<idea-plugin version="2" url="https://github.com/dmarcotte/idea-handlebars">
    <id>org.thymeleaf.extras.idea</id>
    <name>Handlebars/Mustache</name>
    <description>
        <![CDATA[
      <a href="http://handlebarsjs.com/">Handlebars</a> and <a href="http://mustache.github.com/">Mustache</a> template support
      <br>
      <br>
      Issues, feature requests and contributions welcome: <a href="https://github.com/dmarcotte/idea-handlebars">https://github.com/dmarcotte/idea-handlebars</a>
    ]]>
    </description>
    <category>Custom Languages</category>
    <change-notes>
        <![CDATA[
      <b>Changenotes</b>
    ]]>
    </change-notes>
    <version>0.7</version>
    <depends>com.intellij.modules.lang</depends>
    <vendor logo="/icons/handlebars_icon.png" url="https://github.com/dmarcotte">dmarcotte</vendor>

    <idea-version since-build="107.105"/>
    <!--<idea-version since-build="110.000" until-build="128.18"/>-->

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="org.thymeleaf.extras.idea.file.HbFileTypeFactory"/>
        <lang.parserDefinition language="Handlebars"
                               implementationClass="org.thymeleaf.extras.idea.parsing.HbParseDefinition"/>
        <lang.formatter language="Handlebars"
                        implementationClass="org.thymeleaf.extras.idea.format.HbFormattingModelBuilder"/>
        <colorSettingsPage implementation="org.thymeleaf.extras.idea.pages.HbColorsPage"/>
        <lang.fileViewProviderFactory language="Handlebars"
                                      implementationClass="org.thymeleaf.extras.idea.file.HbFileViewProviderFactory"/>
        <lang.commenter language="Handlebars"
                        implementationClass="org.thymeleaf.extras.idea.editor.comments.HbCommenter"/>
        <braceMatcher filetype="Handlebars/Mustache"
                      implementationClass="org.thymeleaf.extras.idea.editor.braces.HbBraceMatcher"/>
        <lang.foldingBuilder language="Handlebars"
                             implementationClass="org.thymeleaf.extras.idea.editor.folding.HbFoldingBuilder"/>
        <typedHandler implementation="org.thymeleaf.extras.idea.editor.actions.HbTypedHandler"/>
        <enterHandlerDelegate implementation="org.thymeleaf.extras.idea.editor.actions.HbEnterHandler"/>
        <applicationConfigurable instance="org.thymeleaf.extras.idea.pages.HbConfigurationPage"/>
        <codeFoldingOptionsProvider
                instance="org.thymeleaf.extras.idea.config.HbFoldingOptionsProvider"/>
        <lang.psiStructureViewFactory language="Handlebars"
                                      implementationClass="org.thymeleaf.extras.idea.structure.HbStructureViewFactory"/>
        <annotator language="Handlebars"
                   implementationClass="org.thymeleaf.extras.idea.inspections.HbBlockMismatchInspection"/>
        <xml.attributeDescriptorsProvider implementation="org.thymeleaf.extras.idea.ThymeleafAttributeDescriptorsProvider"/>
        <html.scriptContentProvider language="Handlebars" implementationClass="org.thymeleaf.extras.idea.HbScriptContentProvider"/>
        <languageInjector implementation="org.thymeleaf.extras.idea.psi.HbLanguageInjector"/>
    </extensions>
</idea-plugin>